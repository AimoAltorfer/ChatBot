<Window x:Class="ChatBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatBot" Height="350" Width="525">
    <Grid>
        <TextBox Name="ChatBox" IsReadOnly="True" Margin="10,10,10,40" VerticalScrollBarVisibility="Auto"/>
        <TextBox Name="InputBox" Margin="10,0,75,10" VerticalAlignment="Bottom" Height="30"/>
        <Button Content="Senden" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Width="60" Click="Button_Click" Height="30"/>
    </Grid>
</Window>
